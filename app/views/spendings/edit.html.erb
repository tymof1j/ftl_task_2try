<%= form_for(@spending) do |f| %>
  <div class="mb-4">
    <%= f.label :amount, class: "block font-bold mb-2 mt-4" %>
    <%= f.number_field :amount, class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :name, class: "block font-bold mb-2" %>
    <%= f.text_field :name, class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "block font-bold mb-2" %>
    <%= f.text_field :description, class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :category, class: "block font-bold mb-2" %>
    <%= f.select :category, options_for_select(Spending.categories.keys, selected: @spending.category), {}, { class: "border border-gray-400 p-2 w-full" } %>
  </div>

  <div class="mb-6">
    <%= f.submit "Save", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
  </div>

<% end %>

<div class="mt-6">
  <%= link_to "Back", spendings_path, class: "text-blue-500 hover:underline" %>
</div>
