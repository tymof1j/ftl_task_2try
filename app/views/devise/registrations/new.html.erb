<h2 class="text-2xl font-bold mb-4 mt-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block font-bold mb-2" %>
    <%= f.email_field :email, class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block font-bold mb-2" %>
    <%= f.password_field :password, class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block font-bold mb-2" %>
    <%= f.password_field :password_confirmation, class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-6">
    <%= f.submit "Sign up", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
