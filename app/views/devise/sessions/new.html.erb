<h2 class="text-2xl font-bold mb-4 mt-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block font-bold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block font-bold mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "border border-gray-400 p-2 w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "font-bold" %>
    </div>
  <% end %>

  <div class="mb-6">
    <%= f.submit "Log in", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
