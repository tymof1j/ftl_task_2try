<div class="w-full max-w-sm mx-auto mt-10">
  <%= form_with(model: @shared_list, local: true) do |form| %>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-lg font-medium mb-4">Share Spending List</h2>

      <div class="mb-4">
        <%= form.label :viewer_id, class: "block font-medium text-gray-700 mb-2" %>
        <%= form.collection_select :viewer_id, User.all, :id, :email, {}, { class: "w-full p-2 rounded-lg bg-gray-200" } %>
      </div>

      <%# <%= f.hidden_field :owner_id, value: current_user.id  %>

      <div class="text-right mt-6">
        <%= form.submit "Share", class: "bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600" %>
      </div>
    </div>
  <% end %>
</div>
